[alias]
  br = branch
  ci = commit
  cia = commit --amend
  co = checkout
  cyp = cherry-pick
  pl = pull
  ps = push
  psf = push --force
  sh = stash
  shp = stash pop
  st = status
  sw = switch
  sc = switch --create
  sd = switch --detach
  ta = tag --annotate

